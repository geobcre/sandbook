{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "installCommand": "npm ci --ignore-scripts --prefix backend",
    "buildCommand": "npx prisma generate --schema backend/prisma/schema.prisma"
  },
  "deploy": {
    "startCommand": "npx prisma migrate deploy --schema backend/prisma/schema.prisma && node backend/src/server.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}